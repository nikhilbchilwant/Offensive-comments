{
    "name": "Jigsaw-toxic-comments",
    "n_gpu": 1,

    "arch": {
        "type": "JigsawBERTmodel",
        "args": {}
    },
    "data_loader": {
        "type": "JigsawDataLoader",
        "args":{
            "data_dir": "/data/users/nchilwant/dataset/jigsaw-toxic-comment-train.csv",
            "batch_size": 8,
            "shuffle": false,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.00002,
            "weight_decay": 0.001
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 5,

        "save_dir": "/data/users/nchilwant/training_output",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
