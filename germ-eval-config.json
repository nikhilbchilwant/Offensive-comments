{
    "name": "germ-eval",
    "n_gpu": 1,
    "k-folds": 10,
    "ray_local_mode": "False",
    "arch": {
        "type": "JigsawBERTmodel",
        "args": {
            "pretrained_model_name": "bert-base-german-dbmdz-uncased",
            "num_classes": 2
        }
    },
    "data_loader": {
        "type": "GermEvalDataLoader",
        "args":{
            "data_dir": "/data/users/nchilwant/dataset/germeval2018.complete.txt",
            "test_dir": "/data/users/nchilwant/dataset/eternio/eternio-data.csv",
            "target_domain_dir":"/data/users/nchilwant/dataset/eternio/eternio-data.csv",
            "batch_size": 64,
            "tokenizer_name": "bert-base-german-dbmdz-uncased",
            "num_workers": 4,
            "data_red_factor": 1
        }
    },
    "loss": {
        "type": "domain_shift_loss",
        "args":{
            "source_size":64,
            "target_size":146,
            "bandwidth":2
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,
        "save_dir": "/data/users/nchilwant/training_output",
        "save_period": 20,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 2
    }
}