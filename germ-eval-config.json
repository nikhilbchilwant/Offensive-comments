{
    "name": "germ-eval",
    "n_gpu": 3,

    "arch": {
        "type": "JigsawBERTmodel",
        "args": {
            "pretrained_model_name": "bert-base-german-dbmdz-uncased",
            "num_classes": 2
        }
    },
    "data_loader": {
        "type": "GermEvalDataLoader",
        "args":{
            "data_dir": "/data/users/nchilwant/dataset/germeval2018.training.txt",
            "batch_size": 256,
            "tokenizer_name": "bert-base-german-dbmdz-uncased",
            "num_workers": 4,
            "data_red_factor": 1,
            "val_data_dir": "/data/users/nchilwant/dataset/germeval2018.test.txt"
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.00002,
            "weight_decay": 0.001
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,

        "save_dir": "/data/users/nchilwant/training_output",
        "save_period": 20,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 2,

        "tensorboard": false
    }
}
